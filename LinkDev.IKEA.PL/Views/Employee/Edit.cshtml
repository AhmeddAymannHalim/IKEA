@model UpdatedEmployeeDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing The Employee</h1>


<form asp-action="Edit"  class="row justify-content-center align-items-center">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="mx-auto w-75">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control w-100"  placeholder="Enter Name Here..." />

        <span asp-validation-for="Name" class="text-danger"></span>

        <label class="form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control w-100"  placeholder="Enter Email Here..." />

        <span asp-validation-for="Email" class="text-danger"></span>



        <div class="form-group">
            <label class="form-label" asp-for="Address"></label>
            <input asp-for="Address" class="form-control w-100"  placeholder="Enter Address Here..." />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>


        <label class="form-label" asp-for="HiringDate"></label>
        <input asp-for="HiringDate" type="date" class="form-control w-100"  placeholder="Enter HiringDate Here..." />

        <span asp-validation-for="HiringDate " class="text-danger"></span>

        <label class="form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control w-100"  placeholder="Enter Age Here..." />

        <span asp-validation-for="Age " class="text-danger"></span>

        <label class="form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control w-100"  placeholder="Enter Salary Here..." />

        <span asp-validation-for="Salary " class="text-danger"></span>


        <label class="form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control w-100"  placeholder="Enter PhoneNumber Here..." />

        <span asp-validation-for="PhoneNumber " class="text-danger"></span>

        @* Gender *@
        <div class="form-group">
            <label class="control-label" asp-for="Gender"></label><br />
            @foreach (Gender genderOptions in Enum.GetValues(typeof(Gender)))
            {
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="@genderOptions" />
                    @genderOptions
                </label>
            }
        </div>

        @* EmployeeType *@
        <div class="form-group">
            <label asp-for="EmployeeType" class="control-label"></label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                <option class="fw-bolder" value="" >Choose</option>

            </select>
        </div>


        <div class="form-group">
            <input asp-for="IsActive" class="form-check-input mb-3" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div>



        <input type="submit" value="Save" class="btn btn-outline-success my-2" />

        <a asp-action="Index" class="btn btn-light w-25 my-2">Back To List</a>
    </div>


</form>