 
    @model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employees";
   
}

<h1>All Employees</h1>
<br />
<br />



<a asp-controller="Employee" asp-action="Create" class="btn btn-primary w-25">Create New Employee</a>

<br />

<form asp-action="Index" method="get" class="my-3 row justify-content-center align-items-center">
    <div class="row col-md-8 offset-1">
        <div class="col-md-8 ">
            <input type="text" name="search" class="form-control" id="searchInp" placeholder="Search By Name ...." />
        </div>
        <div class="col-md-4">
            <input type="submit" value="Search" class="btn btn-outline-success" />
        </div>

    </div>
</form>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>

               
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>@Html.DisplayNameFor(D => D.EmployeeType)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            
        </thead>
        <tbody id="employeeList">
            <partial name="./Partials/_EmployeeListPartial" model="@Model"></partial>
        </tbody>
    </table>
}
else
{
    <div class="mx-auto my-5 alert alert-danger">
        <h3 class="text-danger">There is No Employees Here! ...</h3>
    </div>
}

