@model DetailsEmployeeDto
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>

<div class="row justify-content-center align-items-center">
    <div class="col-md-4">
        <img src="~/files/images/@Model.Image" class="w-50 rounded-circle" alt="EmployeeImage"/>
    </div>
</div>

<div>

    @* Start - Nav *@

    <div>
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            @* General *@
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">General</button>
            </li>

            @* Administrator *@
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="true">Adminsitrators</button>
            </li>

        </ul>
    </div>

    @* End - Nav *@


    <div class="tab-content" id="pills-tabContent">

        @* General *@
      

        <div>
          
                
           

            


           

            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control w-100" readonly />

          

            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control w-100" readonly />

          


            <div class="form-group">
                <label class="form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control w-100"  readonly/>
                
            </div>
            


            <label class="form-label" asp-for="HiringDate"></label>
            <input asp-for="HiringDate" type="date" class="form-control w-100" readonly />

          

            <label class="form-label" asp-for="Age"></label>
            <input asp-for="Age" class="form-control w-100" readonly />

          
            <label class="form-label" asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control w-100" readonly />

           

            <label class="form-label" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control w-100" readonly />

           

            @* Gender *@
            <div class="form-group">
                <label class="control-label" asp-for="Gender"></label><br />
                @foreach (Gender genderOptions in Enum.GetValues(typeof(Gender)))
                {
                    <label class="radio-inline">
                        <input type="radio" disabled asp-for="Gender" value="@genderOptions" />
                        @genderOptions
                    </label>
                } 
            </div>

            @* EmployeeType *@
            <div class="form-group">
                <label asp-for="EmployeeType" class="control-label"></label>
                <select asp-for="EmployeeType" disabled  asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                    <option class="fw-bolder" value="" disabled selected>Choose</option>

                </select>
            </div>


            <div class="form-group">
                <input asp-for="IsActive" class="form-check-input mb-3" disabled />
                <label class="form-check-label" asp-for="IsActive" readonly ></label>
            </div>


  
        


    </div>



        @* Administrator *@
       

        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">

            <div>
                <label class="form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control w-100" readonly />



                <label class="form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control w-100" readonly />





                <label class="form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control w-100" readonly />




                <label class="form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control w-100" readonly />




            </div>

        </div>
    <div class="mt-3">


        <a  asp-route-id="@Model.Id" class="btn btn-success ">Edit</a>
        <a asp-action="Index" class="btn btn-light  my-2">Back To List</a>


    </div>



</div>


