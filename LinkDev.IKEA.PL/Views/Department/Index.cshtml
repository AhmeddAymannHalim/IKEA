@model IEnumerable<DepartmentToReturnDto>
@{
    ViewData["Title"] = "Index";
   
}

<h1>All Departments</h1>
<br />
<br />

<a asp-controller="Department" asp-action="Create" class="btn btn-primary w-25">Create New Department</a>

<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.CreationDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deptartment in Model)
            {

                <tr>
                    <td>@deptartment.Code</td>
                    <td>@deptartment.Name</td>
                    <td>@deptartment.CreationDate</td>
                    <td><a asp-action="Details" asp-route-id="@deptartment.Id" class="btn btn-warning btn-sm"><i class="fas fa-eye"></i>Details</a></td>
                    <td><a asp-action="Update"  class="btn btn-success btn-sm"><i class="fas fa-edit"></i>Update</a></td>
                    <td><a asp-action="Delete"  class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Delete</a></td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mx-auto my-5 alert alert-danger">
        <h3 class="text-danger">There is No Departments Here! ...</h3>
    </div>
}

